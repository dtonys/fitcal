{
  "presets": [
    "babel-preset-env",
    "babel-preset-react",
    "babel-preset-stage-1"
  ],
  "plugins": [
    [ "babel-plugin-module-resolver",
      {
        "root": [
          "./src"
        ]
      }
    ],
    "babel-plugin-universal-import",
    ["babel-plugin-transform-runtime", {
      "polyfill": false,
      "regenerator": true
    }],
    "babel-plugin-transform-decorators-legacy",
  ],
  "env": {
    "development": {
      "plugins": [
        "react-hot-loader/babel"
      ]
    }
  }
}
